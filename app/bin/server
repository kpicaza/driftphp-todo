/**
 * Include the bootstrap file if its found
 *
 * @oaram string $bootstrapPath
 * @param string $file
 *
 * @return bool
 */
function requireIfExists(string &$bootstrapPath, string $file) : bool
{
    if (file_exists($file)) {
        $bootstrapPath = $file;
        require $file;
        return true;
    }

    return false;
}

$bootstrapPath = '';
foreach ([
    'config/bootstrap.php',
    'vendor/autoload.php',
] as $path) {
    requireIfExists($bootstrapPath, __DIR__."/../$path") ||
    requireIfExists($bootstrapPath, __DIR__."/../../$path") ||
    requireIfExists($bootstrapPath, __DIR__."/../../../$path");
    requireIfExists($bootstrapPath, __DIR__."/../../../../$path");

    if ($bootstrapPath) {
        break;
    }
}

if (!$bootstrapPath) {
    die('You must define an existing kernel bootstrap file, or by an alias or my a file path' . PHP_EOL);
}

$application = new \Symfony\Component\Console\Application();
$application->add(new \App\Application\Console\RunServerCommand($bootstrapPath, 'run'));
$application->run();
{
  "name": "kpicaza/driftphp-test",
  "description": "Drift PHP Framework Test",
  "type": "project",
  "license": "BSD-2-Clause",
  "require": {
    "php": "^7.2.13",
    "ext-json": "*",
    "drift/http-kernel": "dev-master",
    "drift/server": "dev-master",
    "mmoreram/react-functions": "dev-master",
    "mmoreram/symfony-bundle-dependencies": "^2.2",
    "ramsey/uuid": "^3.8",
    "react/mysql": "^0.5.4",
    "symfony/dotenv": "^4.3",
    "symfony/framework-bundle": "^4.3",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "franzl/whoops-middleware": "^1.1",
    "phpro/grumphp": "^0.15.0",
    "phpstan/phpstan": "^0.11.5",
    "phpunit/phpunit": "^8.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.4",
    "symfony/var-dumper": "^4.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AppTest\\": "test"
    }
  },
  "scripts": {
    "check-all": [
      "@cs-check",
      "@test",
      "@inspect"
    ],
    "cs-check": "phpcs src --colors",
    "cs-fix": "phpcbf src --colors",
    "inspect": "phpstan analyse src -l7 --ansi",
    "test": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  }
}
